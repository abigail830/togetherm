.con-date{
  color:#757575;
  margin: 10rpx;
  padding-left: 10rpx;
  font-size: 80%;
} 
.con-info {
  margin: 10rpx;
  text-align: left;
  width: 74%;
  display: flex;
  flex-direction:row;
}

.empty_wish {
  color: #757575;
  margin: 50rpx;
  text-align: center;
  font-size: 90%;
}

.btnblock {
  width: 100%;
  border-radius: 30rpx;
  background: #E60C12;
  border: solid 1rpx #6A3906;
  color: #ffffff;
}
.addwishbtn {
  color:#F08080;
  margin: 30rpx auto;
  width: 60%;
  border: 3rpx solid #F08080;
  border-radius: 20rpx;
}

.con-trimg{
    width:60rpx;
    height:60rpx;
    margin:5rpx 10rpx;
}
