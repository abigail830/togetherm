/**index.wxss**/
.container {
  padding:0rpx;
  margin: 0rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.fullwidth{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F08080;
  width: 100%;
  padding: 0;
  margin:0rpx;
  text-align: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  width: 100%;
  padding: 30rpx;
  margin:0rpx;
}
.left{
  width: 60%;
  padding: 10rpx;
  background-image: url("../../images/icon_bg.png");
}
.right {
  width: 40%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo{
  width: 140rpx;
  height: 50rpx;
  margin: 15rpx;
}
.help{
  font-size: 70%;
  padding: 5rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 140rpx;
  border-radius: 20rpx;
  border: solid 1rpx #6a3906;
  color: #ffffff;
  background-color: #94ddf8;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 50%;
}


.countinfo{
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 0rpx 10rpx;
  margin: 0;
  text-align: center;
  background-color:  #F08080;
  color:#757575;
}

.countcell{
  display: flex;
  flex-direction: column;
  width: 50%;
  padding: 10rpx 5rpx;
  margin: 0; 
  background-color:  #e2e2e2;
}

.countheader{
 font-size: 80%;
}

.count {
  font-size: 150%;
  font-weight: bold;
}
.counttips {
  font-size: 50%;
  font-weight: lighter;
}

.content {
  width: 100%;
  background-color: #ffffff;
  display: flex;
  flex-direction:column;
  text-align: center;
  padding: 50rpx 20rpx;
}
