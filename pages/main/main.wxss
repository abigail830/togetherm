/**index.wxss**/
.container {
  padding:0rpx;
  margin: 0rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.fullwidth{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  width: 100%;
  padding: 0;
  margin:0rpx;
  text-align: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  width: 90%;
  padding: 10rpx;
  margin:0rpx;
}
.left{
  width: 30%;
  padding: 10rpx;
  background-image: "../../images/icon_bg.png";
  text-align: right;
}
.middle{
  width: 30%;
  color: #6a3906;
  font-size: 80%;
  text-align: left;
  padding-top: 50rpx;
}
.right {
  width: 30%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo{
  width: 140rpx;
  height: 50rpx;
  margin: 15rpx;
  margin-top: 5rpx;
}
.help{
  font-size: 70%;
  padding: 3rpx;
  height: 50rpx;
  line-height: 40rpx;
  width: 140rpx;
  border-radius: 15rpx;
  border: solid 2rpx #6a3906;
  color: #ffffff;
  background-color: #94ddf8;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 15rpx;
  border-radius: 50%;
  background-color: #94ddf8;
}
.icon_out{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #94ddf8;
  border: solid 3rpx #6a3906;
  margin: 10rpx 0rpx 20rpx 40rpx;
}


.countinfo{
  display: flex;
  flex-direction: row;
  width: 94%;
  margin: 0rpx;
  text-align: center;
  background-color:  #ffffff;
  color:#353535;

}

.countcell{
  display: flex;
  flex-direction: column;
  width: 47%;
  padding: 10rpx;
  margin: 10rpx; 
  border-radius: 30rpx;
  border: solid 8rpx #6a3906; 
  margin-top: 0rpx;
}
.red{
  color: #e60c12; 
}
.yellow{
  color: #ffc000;
}
.countheader{
 font-size: 80%;
 margin: 10rpx;
 color: #6a3906;
}

.count {
  font-size: 160%;
  font-weight: bold;
}
.counttips {
  font-size: 70%;
  font-weight: lighter;
}
.blocker{
  width: 95%;
  height: 30rpx;
  margin: 10rpx;
  margin-top: 1rpx;
}

.content {
  width: 100%;
  background-color: #ffffff;
  display: flex;
  flex-direction:column;
  text-align: center;
  padding: 50rpx 20rpx;
}
