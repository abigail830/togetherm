.boxs {
  padding : 0 40rpx;
  color : #6A3906;
}
.logo {
  width : 199.68rpx;
  height : 54rpx;
  /* margin-top: 41.4rpx ; */
}
.poster {
  width : 670rpx;
  height : 500rpx;
  margin-top : 0rpx;
  border-radius : 25rpx;
  border : 6rpx solid #6A3906;
  box-sizing : border-box;
}
.row-text {
  font-size : 36rpx;
  font-weight : 700;
  overflow : hidden;
  white-space : nowrap;
  margin : 10rpx 0 0;
  text-overflow : ellipsis;
}
.row-text-nickname.row-text {
  margin : 10rpx 10rpx 0 0;
  font-size: 30rpx;
}

.row-text-nickname {
  text-align : right;
  float: right;
  font-weight: normal;
}
.content_lists_new {
  border : 4rpx solid #6A3906;
  border-radius : 25rpx;
  background-color : #FFFFFF;
  min-height : 100rpx;
  box-sizing : border-box;
  overflow : hidden;
}
.input_new.list_input {
  padding : 20rpx;
}
.list_input_label {
  min-width : 60rpx;
  margin-top : 10rpx;
}
.list_input_box {
  flex : 1;
  width : 480rpx;
  font-weight : normal !important;
}
.list_icon {
  width : 50rpx;
  height : 50rpx;
  padding : 0;
}
.input_new {
  display : flex;
  flex-direction : row;
  padding : 10rpx 20rpx;
  font-size : 34rpx;
  position : relative;
}
.input_new.hr::after {
  border-bottom : 1rpx solid #E5E5E5;
  content : '';
  width : 98%;
  right : 0;
  bottom : 0;
  position : absolute;
}
button, .button-hover {
  background : none;
}
button::after {
  border : none;
}
.time {
  font-size : 28rpx;
  padding : 20rpx 0 0;
}
.time+.time{
  padding: 0 0 20rpx
}
.create-btn {
  width : 562rpx;
  height : 100rpx;
  padding-bottom : 40rpx;
  display: block;
  margin: auto
}
.row-text-info {
  font-size : 32rpx;
  color : #6A3906;
  padding : 5rpx 0 30rpx;
}

.list_btn {
  line-height : 0;
  padding : 10rpx 0 0 10rpx;
  background-color : none;
  border : none;
  border-color : transparent;
}
