.boxs {
  padding: 0 40rpx;
  color: #6a3906;
}
.logo {
  width: 199.68rpx;
  height: 54rpx;
  /* margin-top: 41.4rpx ; */
}
.poster {
  width: 670rpx;
  height: 500rpx;
  margin-top: 20rpx;
  border-radius: 25rpx;
  border: 6rpx solid #6a3906;
  box-sizing: border-box;
}
.row-text {
  font-size: 36rpx;
  font-weight: 700;
  overflow: hidden;
  white-space: nowrap;
  margin: 10rpx 0;
  text-overflow: ellipsis;
}
.row-text-nickname {
  text-align: right;
}
.content_lists_new {
  border: 4rpx solid #6a3906;
  border-radius: 25rpx;
  background-color: #fff;
  min-height: 100rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.input_new.list_input {
  padding: 20rpx;
}
.list_input_label {
  min-width: 60rpx;
}
.list_input_box {
  flex: 1;
  width: 480rpx;
  font-weight: normal !important;
}
.list_icon {
  width: 50rpx;
  height: 50rpx;
  padding: 0;
}
.input_new {
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
  font-size: 34rpx;
  position: relative;
}
.input_new.hr::after {
  border-bottom: 1rpx solid #e5e5e5;
  content: "";
  width: 98%;
  right: 0;
  bottom: 0;
  position: absolute;
}
button ,.button-hover{
  background: none;
}
button::after {
  border: none;
}
.time {
  font-size: 34rpx;
  padding: 20px 0;
}
.create-btn {
  width: 672rpx;
  height: 140rpx;
  padding-bottom: 40rpx;
}
.row-text-info {
  font-size: 32rpx;
  color: #6a3906;
  padding: 5rpx 0 30rpx;
}

.list_btn {
  line-height: 0;
  padding:10rpx 0 0 10rpx;
  background-color: none;
  border: none;
  border-color: transparent;
}
